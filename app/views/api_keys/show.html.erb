<%- model_class = @api_key.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:identifier) %>:</strong></dt>
  <dd><%= @api_key.identifier %></dd>
  <dt><strong><%= model_class.human_attribute_name(:verification_code) %>:</strong></dt>
  <dd><%= @api_key.verification_code %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              api_keys_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_api_key_path(@api_key), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              api_key_path(@api_key),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
