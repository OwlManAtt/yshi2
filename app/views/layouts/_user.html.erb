<div class='btn-group pull-right'>
  <% if current_user %>
    <a class='btn dropdown-toggle' data-toggle='dropdown' href='#'>
      <i class='icon-user'></i> <%= current_user.name %> <span class='caret'></span>
    </a>
    <ul class='dropdown-menu'>
      <li><a href='#'><i class='icon-cog'></i> Preferences</a></li>
      <li><a href='#'><i class='icon-lock'></i> API Keys</a></li>
      <li><a href='#'><i class='icon-list-alt'></i> Characters</a></li>
      <li><%= link_to signout_path do %>
       <i class='icon-off'></i> Logout 
      <% end %> </li>
    </ul>
  <% else %>
    <%= link_to("/auth/google", :class => 'btn btn-large') do %>
      <i class='icon-user'></i> Login
    <% end %>
  <% end %>
</div>
